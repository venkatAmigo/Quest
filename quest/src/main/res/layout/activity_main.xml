<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity"
    tools:deviceIds="tv"
    android:paddingStart="48dp"
    android:paddingEnd="48dp"
    android:background="@drawable/background"
    tools:ignore="MergeRootFrame">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/green"
        android:textSize="26sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="My Quests "/>
    <TextView
        android:id="@+id/name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/green"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toStartOf="@id/profile_iv"
        app:layout_constraintTop_toTopOf="@id/profile_iv"
        android:text="Name"/>
    <TextView
        android:id="@+id/logout_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/green"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toBottomOf="@id/name_tv"
        app:layout_constraintEnd_toEndOf="@id/name_tv"
        android:text="Logout"/>

    <ImageView
        android:id="@+id/profile_iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@android:drawable/sym_def_app_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/search_card"
        />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/search_card"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintBottom_toTopOf="@id/main_browse_fragment"
            android:background="@drawable/card_bg"
            android:layout_marginTop="27dp"
            android:layout_marginBottom="27dp"
            >
            <TextView
                android:id="@+id/cat_lbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/green"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="Category: "/>
            <Spinner
                android:id="@+id/cat_spinner"
                android:layout_width="200dp"
                android:backgroundTint="@color/green"
                android:layout_height="wrap_content"
                android:focusableInTouchMode="true"
                android:focusable="true"
                app:layout_constraintStart_toEndOf="@id/cat_lbl"
                app:layout_constraintTop_toTopOf="@id/cat_lbl"
                app:layout_constraintBottom_toBottomOf="@id/cat_lbl"
                />
            <TextView
                android:id="@+id/words_lbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/green"
                app:layout_constraintStart_toEndOf="@id/cat_spinner"
                app:layout_constraintTop_toTopOf="@id/cat_spinner"
                app:layout_constraintBottom_toBottomOf="@id/cat_spinner"
                android:text="Words: "/>
            <EditText
                android:id="@+id/words_et"
                android:layout_width="0dp"
                android:focusable="false"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:backgroundTint="@color/green"
                app:layout_constraintStart_toEndOf="@id/words_lbl"
                app:layout_constraintEnd_toStartOf="@id/search_btn"
                />
            <Button
                android:id="@+id/search_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:focusable="true"
                android:textAllCaps="false"
                android:focusableInTouchMode="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="Search"
                android:background="@drawable/background_green"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    <FrameLayout
        android:id="@+id/main_browse_fragment"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/search_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>