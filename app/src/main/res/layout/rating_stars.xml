<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    >

    <ImageView
        android:id="@+id/start_one"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/star_two"
        app:layout_constraintHorizontal_bias="0.5"
        app:srcCompat="@drawable/star" />

    <ImageView
        android:id="@+id/star_two"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toTopOf="@id/star_two"
        app:layout_constraintEnd_toStartOf="@+id/star_three"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@id/start_one"
        app:srcCompat="@drawable/star" />

    <ImageView
        android:id="@+id/star_three"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/star_two"
        app:layout_constraintEnd_toStartOf="@+id/star_four"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/star_two"
        app:layout_constraintTop_toTopOf="@+id/star_two"
        app:srcCompat="@drawable/star" />

    <ImageView
        android:id="@+id/star_four"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/star_three"
        app:layout_constraintEnd_toStartOf="@+id/star_five"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/star_three"
        app:layout_constraintTop_toTopOf="@+id/star_three"
        app:srcCompat="@drawable/star" />

    <ImageView
        android:id="@+id/star_five"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        app:layout_constraintBottom_toBottomOf="@+id/star_four"
        app:layout_constraintEnd_toStartOf="@+id/start_one"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/star_four"
        app:layout_constraintTop_toTopOf="@+id/star_four"
        app:srcCompat="@drawable/start_stroke" />
</androidx.constraintlayout.widget.ConstraintLayout>